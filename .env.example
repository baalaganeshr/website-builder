# Website Builder Environment Configuration
# Copy this file to .env and configure your settings

# ===========================
# OLLAMA CONFIGURATION (REQUIRED)
# ===========================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=llama3.1:3b

# Alternative models for different use cases
# OLLAMA_MODEL_NAME=gpt-20b  
# OLLAMA_MODEL_NAME=llama3.2:latest

# ===========================  
# SERVER CONFIGURATION
# ===========================
PORT=7001
HOST=localhost

# ===========================
# OPTIONAL: CLOUD AI MODELS
# ===========================
# Only needed if you want to use cloud models instead of local Ollama
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here

# ===========================
# IMAGE GENERATION (OPTIONAL)
# ===========================
# REPLICATE_API_KEY=your-replicate-api-key-here

# ===========================
# DEBUGGING & DEVELOPMENT
# ===========================
# Set to True to enable mock responses (for testing without AI)
MOCK=False
IS_DEBUG_ENABLED=False
DEBUG_DIR=./debug

# Set to True in production deployments
IS_PROD=False

# ===========================
# FRONTEND CONFIGURATION  
# ===========================
# These are typically set in frontend/.env.local
# VITE_HTTP_BACKEND_URL=http://localhost:7001
# VITE_WS_BACKEND_URL=ws://localhost:7001
# VITE_IS_DEPLOYED=false
